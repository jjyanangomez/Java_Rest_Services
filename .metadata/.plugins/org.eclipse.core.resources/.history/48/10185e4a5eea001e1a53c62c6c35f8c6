import javax.ws.rs.core.MediaType;

import com.krakedev.entidades.Cliente;

//El uso del path permite redireccionar cunado se navegue en la URL

@Path("customers")
public class ServiciosClientes {
	
	//MOrmalmente en el path se coloca el nombre del metodo 
	@Path("m1")
	@GET
	public String saludar() {
		return "HOla mundo Rest Web Services";
	}
	
	@Path("mbuscar")
	@GET
	@Produces(MediaType.APPLICATION_JSON)
	public Cliente buscar() {
		Cliente objCliente = new Cliente("1105834079","Juan Jos√©");
		return objCliente;
	}
}
